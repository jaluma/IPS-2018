<Page x:Class="Ui.Main.Pages.PersonalMenuAthlete.PersonalDataMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ui.Main.Pages.PersonalMenuAthlete"
      xmlns:properties="clr-namespace:Ui.Main.Properties"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:adorners="http://gu.se/Adorners"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="625" d:DesignWidth="1250"
      Title="ListOpenCompetitions" Height="545">
    <DockPanel  Height="545" VerticalAlignment="Bottom">
        <Label FontSize="18"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Content="{x:Static properties:Resources.PersonalMenu}" DockPanel.Dock="Top"/>
        <Grid DockPanel.Dock="Top">
            <xctk:WatermarkTextBox Watermark="{x:Static properties:Resources.AthleteDni}" Name="Dni" HorizontalAlignment="Left" Height="30" Margin="460,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="359" />
            <Label Name="LbDni" Content="{x:Static properties:Resources.AthleteDni}" HorizontalAlignment="Left" Margin="340,46,0,0" VerticalAlignment="Top" Height="27" FontSize="14" Width="30" RenderTransformOrigin="1.333,1.111" />
            <Button Name="BtSearch" Content="{x:Static properties:Resources.BtSearch}" HorizontalAlignment="Left" Margin="875,43,0,0" VerticalAlignment="Top" Width="105" Height="30" FontSize="16" Click="BtSearch_Click" RenderTransformOrigin="0.19,0.667"/>
            <DataGrid x:Name="DataGridDataPersonal" MinWidth="800" AutoGeneratingColumn="OnAutoGeneratingColumn" MinHeight="10"  VerticalAlignment="Bottom" ColumnWidth="*" Height="52" DockPanel.Dock="Bottom" IsReadOnly="True" Margin="10,0,0,-74"/>
        </Grid>
        <DataGrid x:Name="DataGridInscriptions" MinWidth="800" AutoGeneratingColumn="OnAutoGeneratingColumn" MinHeight="200"  VerticalAlignment="Bottom" ColumnWidth="*" Height="360" DockPanel.Dock="Bottom" IsReadOnly="True"/>
    </DockPanel>


</Page>