<Page x:Class="Ui.Main.Pages.Competition.Times.TimesAthletes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ui.Main.Pages.Competition.Times"
      xmlns:properties="clr-namespace:Ui.Main.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="625" d:DesignWidth="1250"
      Title="TimesAthletes">

    <DockPanel  Height="545" VerticalAlignment="Bottom">
        <Label FontSize="18"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Content="{x:Static properties:Resources.TitleTimesCompetition}" DockPanel.Dock="Top"/>
        <DataGrid x:Name="DataGridTimes" AutoGenerateColumns="True" MinWidth="800" MinHeight="450" VerticalAlignment="Top" ColumnWidth="*" Height="501" DockPanel.Dock="Right" Width="985" IsReadOnly="True"/>
        <StackPanel Background="White" VerticalAlignment="Top" Width="195" Height="511">
            <StackPanel HorizontalAlignment="Left" Name = "SelectorGender" Height="100" Margin="10,2">
                <Label FontWeight="Bold" FontSize="16" Content="{x:Static properties:Resources.Category}" HorizontalContentAlignment="Center" Width="180"/>
                <CheckBox Name="MaleCheckBox" IsChecked="True" Content="{x:Static properties:Resources.MaleText}" Margin="0,5" Click="CheckBox_OnClick" />
                <CheckBox Name="FemaleCheckBox" IsChecked="True" Content="{x:Static properties:Resources.FemaleText}" Margin="0,5" Click="CheckBox_OnClick"/>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Page>
