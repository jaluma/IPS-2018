<mui:ModernDialog x:Class="Ui.Main.Pages.Competition.Times.AllTimes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ui.Main.Pages.Competition.Times"
      xmlns:properties="clr-namespace:Ui.Main.Properties"
      xmlns:mui="http://firstfloorsoftware.com/ModernUI"
      mc:Ignorable="d"
      MinHeight="625" MinWidth="1250"
      Height="625" Width="1250"
      Title="Tiempos"
      ResizeMode="CanResizeWithGrip">


    <ScrollViewer Name="Panel"  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Height="Auto">
        <Grid Name="Layout" Margin="10" Style="{StaticResource ContentRoot}">
            <Grid.Resources >
                <Style TargetType="Border" >
                    <Setter Property="Padding" Value="10,10,10,10" />
                </Style>
            </Grid.Resources>
        </Grid>
    </ScrollViewer>
</mui:ModernDialog>
