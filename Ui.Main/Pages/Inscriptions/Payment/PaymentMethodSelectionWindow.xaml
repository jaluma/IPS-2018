<Window x:Class="Ui.Main.Pages.Inscriptions.Payment.PaymentMethodSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ui.Main.Pages.Inscriptions.Payment"
        xmlns:properties="clr-namespace:Ui.Main.Properties"
        mc:Ignorable="d"
        Title="{x:Static properties:Resources.PaymentMethodSelection}" Height="300" Width="300">
    <Grid>
        <DockPanel Height="269" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="292">
            <RadioButton Name="RBWireTransfer" Content="{x:Static properties:Resources.WireTransfer}" 
                         Height="110" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="14" DockPanel.Dock="Top" 
                         IsChecked="True" GroupName="MethodGroup"/>
            <Button Content="{x:Static properties:Resources.Next}" Height="35" VerticalAlignment="Top" 
                    DockPanel.Dock="Bottom" FontSize="16" Margin="0,120,10,0" HorizontalAlignment="Right" Width="118" Click="Button_Click"/>

        </DockPanel>
    </Grid>
</Window>
